# change container layout (stacked, tabbed, toggle split)
bindsym $mod+i layout stacking
bindsym $mod+o layout tabbed
bindsym $mod+p layout toggle split
# toggle split to be either in vertical or horizontal
bindsym $mod+b splith
bindsym $mod+v splitv

# toggle tiling / floating
bindsym $mod+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+Tab focus mode_toggle

# focus the parent container
bindsym $mod+u focus parent

# focus the child container
bindsym $mod+n focus child


# MOUSE CONTROL

# Use Mouse+$mod to drag floating windows to their wanted position
# mod + right click and drag to resize; hold shift to resize proportionally
floating_modifier $mod

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# The middle button over a titlebar kills the window
bindsym --release button2 kill

# right click on titlebar to toggle floating for a windoe
bindsym button3 floating toggle
bindsym $mod+button3 floating toggle

#scratchpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show


# reload the configuration file
bindsym $mod+Shift+a reload
bindsym $mod+Shift+c exec 'i3-edit-config'
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# fix matlab and other windows
