set $indicator_colour #0099cc
set $border_colour #0044bb
set $title_colour #0066cc
set $text_colour #ffffff

# Colours
# border is the very edge of the titlebar (the 3D/'highlight' row of pixels)
# backgr. is the actual window decoration colour
#
# class                 border  backgr. text    indicator child_border
#client.focused         #4c7899 #285577 #ffffff #2e9ef4   #285577
client.focused          $border_colour $title_colour $text_colour $indicator_colour $title_colour
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

client.background       #ffffff

bar {
	output eDP-1
	output HDMI-1
	output DP-2
	output DP-1
	font $barfont
	tray_output primary
	status_command "i3status-conky"

	colors {
		focused_workspace $border_colour $title_colour $text_colour
	}
}

